            </div>
          </nav>
        </div>
      </header>
    </div>

    <!-- Admin Section -->
    <section class="admin_section layout_padding">
      <div class="container-box">
        <h2>Add Student Data</h2>
        <div class="heading_container"></div>
        <form
          id="uploadForm"
          action="/upload-student"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="studentFile">Upload Student List (Excel)</label>
            <input
              type="file"
              class="form-control"
              id="studentFile"
              name="studentFile"
              accept=".xls,.xlsx"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Submit
          </button>
        </form>
      </div>
    </section>

    <!-- Scripts -->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script>
      function confirmLogout() {
        if (confirm("Are you sure you want to logout?")) {
          window.location.href = "/login";
        }
      }

      const form = document.getElementById("uploadForm");

      form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent page reload

        const formData = new FormData(form);

        try {
          const response = await fetch("/upload-student", {
            method: "POST",
            body: formData,
          });

          const result = await response.json();

          // Show an alert with the server response message
          alert(result.message);
        } catch (error) {
          alert(
            "‚ùå An error occurred while uploading the file. Please try again."
          );
          console.error("Upload error:", error);
        }
      });
    </script>
