    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/css/responsive.css" rel="stylesheet" />
    <style>
      body {
        background-color: #020230;
        color: white; /* Ensuring text outside the container is visible */
      }
      .container {
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
        color: black !important; /* Forcing visible text */
      }
      h2 {
        text-align: center;
        margin-bottom: 20px;
        color: black !important;
        white-space: nowrap;
      }
      p,
      ul li,
      a {
        color: black !important; /* Making sure all text inside is dark */
        font-weight: 300;
      }
      a {
        text-decoration: none;
        color: #ffffff !important; /* Making links visible */
      }
      /* Custom button styles */
      a.btn-custom {
        display: inline-block;
        padding: 10px 20px;
        background-color: #ff4646 !important; /* Current red color */
        color: white !important;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
      }

      /* Hover effect - Lighter red */
      a.btn-custom:hover {
        background-color: #ff7b7b !important; /* Lighter red */
        color: white !important;
      }
      /* Navbar links remain white */
      .navbar-nav .nav-link {
        color: white !important;
      }

      /* Dropdown items specifically in black */
      .dropdown-menu .dropdown-item {
        color: black !important;
      }

      /* Optional: Change dropdown item hover color for better visibility */
      .dropdown-menu .dropdown-item:hover {
        background-color: #f8f9fa; /* Light grey background */
        color: black !important;
      }
      a {
        color: #ffffff !important; /* Making links visible */
      }
    </style>
  </head>

